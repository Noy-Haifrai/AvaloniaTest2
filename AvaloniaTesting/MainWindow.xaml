<Window x:Class="AvaloniaTestingProgramm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Тестирующая программа" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontSize="20" FontWeight="Bold" 
                       Margin="0,0,0,30" HorizontalAlignment="Center"><Run Language="ru-ru" Text="Программа тестирования сотрудников"/></TextBlock>

            <Button x:Name="createTestBtn" Content="Создать тест" Width="150" Height="40" Margin="5"
                    Click="createTestBtn_Click" FontSize="14"/>

            <Button x:Name="passTestBtn" Content="Пройти тест" Width="150" Height="40" Margin="5"
                    Click="passTestBtn_Click" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>